<%# default partial to display solr document fields in catalog index view -%>
<tr class="document <%= cycle("even","odd")%>">
  <td>
    <%= "#{document[:date_display]}" %>
  </td>
  <td>
    <%= link_to_document(document, :label => Blacklight.config[:show][:heading].to_sym, :counter => (document_counter + 1 + @response.params[:start].to_i)) %>
  </td>
  <td>
    <%= "Series: #{document[:series_display]}, Subseries: #{document[:subseries_display]},  Box: #{document[:box_display]}, Folder: #{document[:folder_display]}" %>
  </td>
</tr>